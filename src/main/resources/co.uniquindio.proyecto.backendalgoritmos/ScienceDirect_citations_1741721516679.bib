url = {https://www.sciencedirect.com/science/article/pii/S1871187124002670},
author = {Paul V. DiStefano and John D. Patterson and Roger E. Beaty},
keywords = {Overinclusive thinking, Categorization, Personality, Individual differences, Psychometrics, Creativity},
abstract = {Overinclusive thinking, characterized by flexible category boundaries and broad associative networks, has been linked to creativity. However, overinclusive thinking has lacked rigorous psychometric evaluation grounded in the cognitive psychology of categorization. In this paper, we introduce the Categorical Overinclusive Thinking Task (COverTT) and evaluate its reliability and validity. Across three studies involving 749 participants, we explore the relationship between overinclusive thinking, creativity, openness, creative behaviors, intelligence, and schizotypy. Our findings demonstrate that the COverTT is a reliable tool for assessing overinclusive thinking. Furthermore, we find small but reliable correlations between the COverTT and openness/creative behaviors. To enable other researchers to readily use the COverTT for measuring overinclusive thinking, we provide open access to our data, code, and materials at OSF (https://osf.io/c3phq/).}
}
@article{LI2025112443,
title = {A radical shift to probabilistic thinking: Integrating energy analysis in performance-driven building morphology generation},
journal = {Building and Environment},
volume = {269},
pages = {112443},
year = {2025},
issn = {0360-1323},
doi = {https://doi.org/10.1016/j.buildenv.2024.112443},
url = {https://www.sciencedirect.com/science/article/pii/S0360132324012848},
author = {Wenjing Li and Wanting Hong and Xinhui Xu and Mehdi Makvandi and Binghan Zhang and Qingchang Chen and Philip F. Yuan},
keywords = {Energy consumption, Architectural design, Artificial intelligence, Performance-driven design, Bibliometrics},
abstract = {In the design phase, analyses of thermal and wind characteristics inside and outside buildings are subject to uncertainty, which affects the precision of energy requirements for building clusters. Moreover, the complex characteristics of urban morphology and microenvironmental data at the street-block scale impact the speed of quantitative calculations of the energy demands of buildings. Intelligent spatial design workflows, driven by artificial intelligence tools and evolutionary algorithm-based self-feedback mechanisms, have been developed to address these issues. In constructing performance-driven simulation workflows for space generation, architectural simulations are influenced by model accuracy, boundary conditions, and application limitations. These problems have different solutions according to the study scope or focus; hence, the proposed solutions are specific and limited. Currently, numerical simulations in the design phase are based on detailed physical models such as EnergyPlus. However, existing algorithms are not tailored for data-driven generative design, which requires the quantification of limited information and has high computational costs, limiting the ability to balance simulation accuracy and computational costs. In this paper, bibliometric analysis is applied to systematically investigate the application of technical methods in energy consumption analyses in the early stage of architectural design. The applicability of forward- and reverse-simulation workflows in performance analyses of environmental systems is analyzed considering differences in the data flow direction. Additionally, considering the data limitations in the design phase, the accuracies of detailed physical models and simplified engineering models in performance-driven architectural space generation workflows are compared. Furthermore, optimization methods, common algorithms, and plugins and their advantages and disadvantages are summarized.}
}
@article{DING2024101503,
title = {Using the divergent association task to measure divergent thinking in Chinese elementary school students},
journal = {Thinking Skills and Creativity},
volume = {52},
pages = {101503},
year = {2024},
issn = {1871-1871},
doi = {https://doi.org/10.1016/j.tsc.2024.101503},
url = {https://www.sciencedirect.com/science/article/pii/S1871187124000415},
author = {Guozhu Ding and Yiwei He and Kaixu Yi and Shan Li},
keywords = {Divergent thinking, Semantic distance, Creativity, Natural language processing, Elementary school student},
abstract = {The Divergent Association Task (DAT), published in July 2021, is a psychological test designed to measure an individual's divergent thinking. The test requires participants to name ten nouns that exhibit maximum dissimilarity from each other. The semantic distance between these nouns is then calculated to indicate the person's level of divergent thinking. In this study, we explored the applicability of the DAT for elementary school students in Chinese contexts, given that it was not initially designed for this specific population and was available only in English. We recruited a total of 348 students who were asked to complete three creativity tasks: the DAT, the Alternative Uses Task (AUT), and the Bridge-the-Associative-Gap Task (BAG). We examined the associations between DAT and the scores of the AUT and BAG tests. Moreover, we tested the accuracy of the DAT using varying numbers of nouns and different natural language processing models to calculate the semantic distance between nouns. Our findings supported the suitability of using the DAT to measure divergent thinking in elementary school students within Chinese contexts. We also found that using only eight nouns, instead of ten, could achieve a relatively high accuracy in measuring divergent thinking based on the DAT method. The language model of Word2Vec performed better than the BERT (Bidirectional Encoder Representations from Transformers) and GPT (Generative Pre-trained Transformer) models when calculating semantic distances between nouns. This study has methodological and practical implications.}
}
@article{PUJIASTUTI20241738,
